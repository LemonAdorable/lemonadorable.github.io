---
import { cn } from '../../utils'

interface Props {
  class?: string
  id?: string
  currentSlug?: string
}

const { class: className, id = 'graph-view', currentSlug, ...props } = Astro.props
---

<div id={id} class={cn('graph-view-container', className)} data-current-slug={currentSlug} {...props}>
  <div class="graph-view-header flex items-center justify-between mb-0 flex-shrink-0">
    <h2 class="font-medium">GRAPH VIEW</h2>
    <button
      id="graph-toggle"
      class="graph-toggle-btn text-muted-foreground hover:text-foreground transition-colors"
      aria-label="Toggle global graph"
      title="Toggle global graph"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <circle cx="12" cy="12" r="10"></circle>
        <line x1="12" y1="2" x2="12" y2="6"></line>
        <line x1="12" y1="18" x2="12" y2="22"></line>
        <line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line>
        <line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line>
        <line x1="2" y1="12" x2="6" y2="12"></line>
        <line x1="18" y1="12" x2="22" y2="12"></line>
        <line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line>
        <line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line>
      </svg>
    </button>
  </div>
  <div id="graph-canvas" class="graph-canvas"></div>
</div>

<script>
  // Dynamically import and initialize graph view
  if (typeof window !== 'undefined') {
    function loadGraphView() {
      // Try to find graph-view container by ID (supports both 'graph-view' and 'blog-graph-view')
      const container = document.getElementById('graph-view') || document.getElementById('blog-graph-view')
      if (!container) {
        console.warn('GraphView container not found')
        return
      }
      
      import('./scripts/graph-view').then(({ initGraphView }) => {
        initGraphView()
      }).catch((err) => {
        console.error('Failed to load graph view:', err)
      })
    }
    
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', loadGraphView)
    } else {
      // Use setTimeout to ensure container is in DOM
      setTimeout(loadGraphView, 100)
    }
  }
</script>

<style>
  .graph-view-container {
    margin-top: 0;
    flex-shrink: 0;
    background: transparent;
  }

  .graph-view-header {
    margin-bottom: 1rem;
  }

  /* Match TOC header style exactly */
  .graph-view-header h2 {
    margin: 0;
    font-size: inherit;
    font-weight: inherit;
    line-height: inherit;
  }

  .graph-toggle-btn {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .graph-canvas {
    width: 100%;
    height: 180px;
    min-height: 180px;
    border: 1px solid hsl(var(--border));
    border-radius: 0.375rem;
    overflow: hidden;
    background: transparent;
    flex-shrink: 0;
  }

  /* Ensure graph view is visible even if content is loading */
  .graph-view-container {
    min-height: 220px;
  }

  .graph-canvas :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>

<style is:global>
  .graph-fullscreen-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10000;
    display: none;
    align-items: center;
    justify-content: center;
  }

  .graph-fullscreen-overlay.active {
    display: flex;
  }

  .graph-fullscreen-backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: hsl(var(--background) / 0.5);
    backdrop-filter: blur(4px);
    cursor: pointer;
  }

  .graph-fullscreen-modal {
    position: relative;
    width: 75%;
    max-width: 1400px;
    height: 85vh;
    max-height: 900px;
    background: hsl(var(--background) / 0.7);
    backdrop-filter: blur(8px);
    border-radius: 12px;
    box-shadow:
      0 14px 50px rgba(27, 33, 48, 0.15),
      0 10px 30px rgba(27, 33, 48, 0.2);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    border: 1px solid hsl(var(--border) / 0.5);
    z-index: 1;
  }

  @media (max-width: 1024px) {
    .graph-fullscreen-modal {
      width: 90%;
      height: 80vh;
    }
  }


  .graph-fullscreen-canvas {
    flex: 1;
    width: 100%;
    overflow: hidden;
    background: transparent;
    min-height: 0;
  }

  .graph-fullscreen-canvas :global(svg) {
    width: 100%;
    height: 100%;
  }
</style>

