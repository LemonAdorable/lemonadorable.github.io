---
interface Props {
  class?: string
  title: string
  items: string[]
}

const { class: className, title, items, ...props } = Astro.props
---

<div
  class={`not-prose flex flex-col rounded-xl border py-3 px-3 gap-y-3 sm:gap-y-4 ${className || ''}`}
  {...props}
>
  <div class='m-0 px-2 text-lg font-medium'>{title}</div>
  <div class='flex flex-wrap gap-2'>
    {
      items.map((item) => (
        <span class='rounded-md border bg-muted px-3 py-1 text-sm'>{item}</span>
      ))
    }
  </div>
</div>

